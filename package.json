{
  "xo": {
    "esnext": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "node_modules/**",
      "dist/**",
      "tasks/**"
    ],
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "brace-style": [
        2,
        "stroustrup",
        {
          "allowSingleLine": false
        }
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "linebreak-style": 0,
      "quote-props": [
        2,
        "consistent-as-needed"
      ],
      "space-before-function-paren": [
        2,
        "always"
      ]
    }
  },
  "scripts": {
    "build": "node tasks/build.js",
    "test": "xo"
  },
  "devDependencies": {
    "babelify": "^6.4.0",
    "browserify": "^11.2.0"
  }
}
